
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .innerbox {
        width: 250px;
        max-width: 250px;
        height: 200px;
        max-height: 200px;
        display: inline-block;
    }
</style>

<div class="container">
    <div>
        <h2>All products are shown here</h2>
    </div>

    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-sm-3 col-md-3 col-lg-3">
                <div class="card text-white bg-primary mb-2 innerbox">
                    <div class="card-header">@product.ProductSorter.Name</div>
                    <div class="card-body">
                        <h4 class="card-title">@product.Name</h4>
                        <p class="card-text">@product.Description</p>
                    </div>
                </div><span>&nbsp;</span>
            </div>

        }
    </div>

</div>